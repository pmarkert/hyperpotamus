  },
  "author": "Phillip Markert <phillip@ephisys.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/pmarkert/hyperpotamus.git"
  },
  "bugs": {
    "url": "https://github.com/pmarkert/hyperpotamus/issues"
  },
  "keywords": [
    "yaml",
    "json",
    "api",
    "http",
    "script",
    "load test",
    "automation",
    "website monitoring"
  ],
  "dependencies": {
    "async": "^2.6.1",
    "aws-sdk": "^2.384.0",
    "bluebird": "^3.5.3",
    "calfinated": "^1.4.1",
